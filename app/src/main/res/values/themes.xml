    <!-- Component Styles -->
    <style name="Button.BigTime" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Card.BigTime" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Chip.BigTime" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInput.BigTime" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="BottomSheet.BigTime" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Material3.BottomSheet.Modal</item>
    </style>

    <!-- Event Card Styles -->
    <style name="EventCard.BigTime" parent="Card.BigTime">
        <item name="cardBackgroundColor">@color/event_card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <!-- FAB Style -->
    <style name="FAB.BigTime" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/on_primary</item>
    </style>

    <!-- Tab Layout Style -->
    <style name="TabLayout.BigTime" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="android:background">@color/surface</item>
    </style>

</resources>