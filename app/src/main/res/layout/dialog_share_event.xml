<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="分享事件"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="生日派对" />

    <!-- Share Preview -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="分享预览"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/share_preview_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSharePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="📅 生日派对\n📆 2024年12月25日\n⏰ 还有 15 天\n📝 庆祝生日快乐\n\n来自 Day Counter" />

    </ScrollView>

    <!-- Share Options -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="分享方式"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:columnCount="2"
        android:rowCount="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareText"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawableStart="@android:drawable/ic_menu_send"
            android:drawablePadding="8dp"
            android:text="文字分享" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareImage"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawableStart="@android:drawable/ic_menu_gallery"
            android:drawablePadding="8dp"
            android:text="图片分享"
            android:enabled="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopyText"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="8dp"
            android:text="复制文本" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp" />

    </GridLayout>

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消" />

</LinearLayout>
