<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_wood_texture" />

    <!-- Content Container for screenshot -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_baseline_edit_24"
                app:tint="@color/white" />

        </RelativeLayout>

        <!-- Main Event Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#F0FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <TextView
                    android:id="@+id/tvEventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="å¼€å­¦è¿˜æœ‰" />

                <TextView
                    android:id="@+id/tvDaysCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/text_primary"
                    android:textSize="96sp"
                    android:textStyle="bold"
                    tools:text="1" />

                <TextView
                    android:id="@+id/tvDaysLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/days_label_background"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:text="å¤©"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvTargetDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    tools:text="ç›®æ ‡æ—¥: 2025-9-1 æ˜ŸæœŸä¸€" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_baseline_share_24"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnSaveImage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_baseline_save_alt_24"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnChangeBackground"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_baseline_image_24"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnPin"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_baseline_push_pin_24"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnMore"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_baseline_more_horiz_24"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Premium Badge -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="ðŸ˜€ è¶…å¤šç²¾ç¾Žä¸»é¢˜ï¼"
        android:textColor="#80FFFFFF"
        android:textSize="12sp" />

</RelativeLayout>